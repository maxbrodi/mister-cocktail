<div class="container">
  <div class="row">
    <div class="col-xs-7 coktail-display">
      <h1>The Cocktails</h1>
      <br>
      <% @cocktails.each do |cocktail| %>
        <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
      <% end %>

      <br>
      <%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>


